<Window x:Class="EngieneerHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngieneerHelper"
        mc:Ignorable="d"
        Title="EHMain" Height="632" Width="398.88" ResizeMode="NoResize" Background="Transparent" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" >
    <Grid UseLayoutRounding="True">
        <Border Height="632" Width="398.88" CornerRadius="5" Background="#FF282E35"/>
        <Border Height="48" VerticalAlignment="Top" CornerRadius="5,5,0,0" Background="#FF474D56"/>
        <Button x:Name="Exit" Click="Button_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="367,16,16,16" Height="16" Width="16" VerticalAlignment="Top" >
            <Button.Background>
                <ImageBrush ImageSource="Close-Default.png" Stretch="None"/>
            </Button.Background>
        </Button>
        <Button x:Name="Wrap" VerticalAlignment="Top" Width="16" Height="16" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="318,16,65,0">
            <Button.Background>
                <ImageBrush ImageSource="Wrap-Default.png" Stretch="None" AlignmentY="Bottom"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
